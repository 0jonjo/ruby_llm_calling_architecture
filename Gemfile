# Gemfile for LLM Function Calling examples

source 'https://rubygems.org'

# Core dependency for LLM function calling
gem 'ruby_llm'

# For loading environment variables (API keys, etc.)
gem 'dotenv', '~> 3.0'

# IRB documentation (silences Ruby 3.5 warning)
gem 'rdoc'

# Optional: JSON handling (Ruby has built-in JSON, but this adds features)
# gem 'json'
